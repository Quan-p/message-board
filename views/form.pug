extends layout 

block content 
    header
        h1= 'Message Board'
        p= 'Message whatever you want'
    main 
        section.form-container
        <form method="POST" action="/new">
            input(type='text', placeholder='Name' name='title' id='title')
            textarea(name='description' placeholder='Type your message here!' cols='30' )
            button(type='submit' id='submit-btn')= 'Submit'
        