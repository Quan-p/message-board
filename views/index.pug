extends layout

block content
  h1= title
  p(class='sub-title') Welcome to #{title}
  .button-container 
    a(href=`http://localhost:${process.env.PORT || 3000}/new`): button.compose= "New Message"

  main
    each message in messages
      section.message-card
        h2= message.user
        p.description= message.text
        p.date= message.added